<body>

<a href="index.html" class="home-btn">üè† Home</a>

<div id="game-box">
    <div id="start-screen">
        <h1>üß† MEMORY MASTER</h1>
        <p>Flip the cards to find the matching pairs before time runs out!</p>
        <button class="btn" onclick="startGame()">TRAIN BRAIN!</button>
    </div>

    <div id="play-screen" class="hidden">
        <div class="stat-row">
            <span>üèÜ Score: <b id="score">0</b></span>
            <span>‚≠ê Level: <b id="level">1</b></span>
        </div>
        <div id="timer-container"><div id="timer-bar"></div></div>
        
        <div id="grid"></div>
    </div>

    <div id="end-screen" class="hidden">
        <h1 id="status-title">‚è≥ TIME'S UP!</h1>
        <p>Your brain is getting stronger!</p>
        <h2 style="font-size: 2.5rem; color: var(--yellow); margin: 10px 0;">Final Score: <span id="final-score">0</span></h2>
        <button class="btn" onclick="showStartScreen()">üß† TRY AGAIN</button>
        <button class="btn btn-home" onclick="window.location.href='index.html'">üè† CHOOSE NEW GAME</button>
    </div>
</div>

<script>
    let score = 0, level = 1, timeLeft = 100, timer;
    let hasFlippedCard = false, lockBoard = false;
    let firstCard, secondCard;
    let matchedPairs = 0, totalPairs = 0;
    
    const gridEl = document.getElementById('grid');
    const allEmojis = ['üê∂','üê±','üê≠','üêπ','üê∞','ü¶ä','üêª','üêº','üê®','üêØ','ü¶Å','üêÆ','üê∑','üê∏','üêµ','ü¶â'];

    // Audio Synthesizer
    const AudioContext = window.AudioContext || window.webkitAudioContext;
    let audioCtx;

    function initAudio() {
        if (!audioCtx) audioCtx = new AudioContext();
        if (audioCtx.state === 'suspended') audioCtx.resume();
    }

    function playSound(type) {
        if (!audioCtx) return;
        const osc = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        osc.connect(gainNode);
        gainNode.connect(audioCtx.destination);

        if (type === 'flip') {
            osc.type = 'triangle';
            osc.frequency.setValueAtTime(300, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(600, audioCtx.currentTime + 0.1);
            gainNode.gain.setValueAtTime(0.1, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.1);
            osc.start(); osc.stop(audioCtx.currentTime + 0.1);
        } else if (type === 'match') {
            osc.type = 'sine';
            osc.frequency.setValueAtTime(600, audioCtx.currentTime);
            osc.frequency.setValueAtTime(800, audioCtx.currentTime + 0.1);
            gainNode.gain.setValueAtTime(0.1, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.3);
            osc.start(); osc.stop(audioCtx.currentTime + 0.3);
        } else if (type === 'wrong') {
            osc.type = 'sawtooth';
            osc.frequency.setValueAtTime(200, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(150, audioCtx.currentTime + 0.2);
            gainNode.gain.setValueAtTime(0.1, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.2);
            osc.start(); osc.stop(audioCtx.currentTime + 0.2);
        }
    }

    function showStartScreen() {
        document.getElementById('start-screen').className = '';
        document.getElementById('end-screen').className = 'hidden';
        document.getElementById('play-screen').className = 'hidden';
    }

    function startGame() {
        initAudio();
        score = 0; level = 1; timeLeft = 100;
        document.getElementById('start-screen').className = 'hidden';
        document.getElementById('end-screen').className = 'hidden';
        document.getElementById('play-screen').className = '';
        updateStats();
        loadLevel();
        startTimer();
    }

    function loadLevel() {
        gridEl.innerHTML = '';
        matchedPairs = 0;
        
        // Setup Grid Size based on level
        let cols = 2, rows = 2; // Level 1: 4 cards
        if (level === 2) { cols = 3; rows = 4; } // 12 cards
        if (level === 3) { cols = 4; rows = 4; } // 16 cards
        if (level >= 4) { cols = 5; rows = 4; } // 20 cards

        totalPairs = (cols * rows) / 2;
        
        // CSS Grid dynamic columns & sizing
        gridEl.style.gridTemplateColumns = `repeat(${cols}, 1fr)`;
        let cardSize = cols >= 5 ? '55px' : cols >= 4 ? '60px' : '70px';
        
        // Select random emojis and double them to make pairs
        let levelEmojis = allEmojis.sort(() => 0.5 - Math.random()).slice(0, totalPairs);
        let gameCards = [...levelEmojis, ...levelEmojis];
        
        // Shuffle cards
        gameCards.sort(() => 0.5 - Math.random());

        // Create HTML elements
        gameCards.forEach(emoji => {
            const card = document.createElement('div');
            card.classList.add('card');
            card.style.width = cardSize;
            card.style.height = cardSize;
            card.dataset.emoji = emoji;

            card.innerHTML = `
                <div class="card-inner">
                    <div class="card-face card-back"></div>
                    <div class="card-face card-front">${emoji}</div>
                </div>
            `;
            
            card.addEventListener('click', flipCard);
            gridEl.appendChild(card);
        });
    }

    function flipCard() {
        if (lockBoard) return;
        if (this === firstCard) return;

        playSound('flip');
        this.classList.add('flipped');

        if (!hasFlippedCard) {
            hasFlippedCard = true;
            firstCard = this;
            return;
        }

        secondCard = this;
        checkForMatch();
    }

    function checkForMatch() {
        let isMatch = firstCard.dataset.emoji === secondCard.dataset.emoji;

        if (isMatch) {
            playSound('match');
            disableCards();
            matchedPairs++;
            score += 10;
            timeLeft = Math.min(100, timeLeft + 5); // Time bonus
            updateStats();

            // Next Level Check
            if (matchedPairs === totalPairs) {
                setTimeout(() => {
                    level++;
                    timeLeft = Math.min(100, timeLeft + 30); // Big time bonus for beating level
                    updateStats();
                    loadLevel();
                }, 1000);
            }
        } else {
            unflipCards();
        }
    }

    function disableCards() {
        firstCard.removeEventListener('click', flipCard);
        secondCard.removeEventListener('click', flipCard);
        
        // Make matched cards pulse slightly
        firstCard.style.transform = 'scale(0.95)';
        secondCard.style.transform = 'scale(0.95)';
        
        resetBoard();
    }

    function unflipCards() {
        lockBoard = true;
        playSound('wrong');

        setTimeout(() => {
            firstCard.classList.remove('flipped');
            secondCard.classList.remove('flipped');
            resetBoard();
        }, 800);
    }

    function resetBoard() {
        [hasFlippedCard, lockBoard] = [false, false];
        [firstCard, secondCard] = [null, null];
    }

    function startTimer() {
        clearInterval(timer);
        timer = setInterval(() => {
            timeLeft -= 0.5; // Drain speed
            
            document.getElementById('timer-bar').style.width = Math.max(0, timeLeft) + '%';
            
            if(timeLeft < 25) {
                document.getElementById('timer-bar').style.background = '#ff0000';
            } else {
                document.getElementById('timer-bar').style.background = 'linear-gradient(90deg, var(--red), var(--orange), var(--yellow))';
            }

            if (timeLeft <= 0) gameOver();
        }, 100);
    }

    function gameOver() {
        clearInterval(timer);
        document.getElementById('play-screen').className = 'hidden';
        document.getElementById('end-screen').className = '';
        document.getElementById('final-score').innerText = score;
    }

    function updateStats() {
        document.getElementById('score').innerText = score;
        document.getElementById('level').innerText = level;
    }
</script>
</body>
</html>
