<div id="game-box">
    <div id="start-screen">
        <h1>üßô‚Äç‚ôÇÔ∏è WORD WIZARD</h1>
        <p>Unscramble the magic words before your spell energy runs out!</p>
        <button class="btn" onclick="startGame()">CAST SPELL!</button>
    </div>

    <div id="play-screen" class="hidden">
        <div class="stat-row">
            <span>‚ú® Spells: <b id="score">0</b></span>
            <span>üîÆ Level: <b id="level">1</b></span>
        </div>
        <div id="mana-container"><div id="mana-bar"></div></div>
        
        <div id="emoji-hint">‚ùì</div>
        <div id="scrambled-word">W R O D</div>
        
        <input type="text" id="answer" autocomplete="off" spellcheck="false" placeholder="Type here">
    </div>

    <div id="end-screen" class="hidden">
        <h1 id="status-title">üí® FIZZLE!</h1>
        <p>You ran out of magic energy!</p>
        <h2 style="font-size: 2.5rem; color: var(--gold); margin: 10px 0;">Spells Cast: <span id="final-score">0</span></h2>
        <button class="btn" onclick="showStartScreen()">‚ú® TRY AGAIN</button>
        <button class="btn btn-home" onclick="window.location.href='index.html'">üè† CHOOSE NEW GAME</button>
    </div>
</div>

<script>
    let score = 0, level = 1, currentWord = "", timeRemaining = 100, timer;
    const emojiEl = document.getElementById('emoji-hint');
    const scrambledEl = document.getElementById('scrambled-word');
    const ansInp = document.getElementById('answer');
    
    // Dictionary of words grouped by difficulty
    const dictionary = {
        1: [
            {w: "CAT", e: "üê±"}, {w: "DOG", e: "üê∂"}, {w: "SUN", e: "‚òÄÔ∏è"}, 
            {w: "CAR", e: "üöó"}, {w: "BUG", e: "üêõ"}, {w: "BAT", e: "ü¶á"}
        ],
        2: [
            {w: "STAR", e: "‚≠ê"}, {w: "BIRD", e: "üê¶"}, {w: "FISH", e: "üêü"}, 
            {w: "MOON", e: "üåô"}, {w: "FROG", e: "üê∏"}, {w: "TREE", e: "üå≥"}
        ],
        3: [
            {w: "APPLE", e: "üçé"}, {w: "HOUSE", e: "üè†"}, {w: "GHOST", e: "üëª"}, 
            {w: "TIGER", e: "üêØ"}, {w: "SNAKE", e: "üêç"}, {w: "PIZZA", e: "üçï"}
        ],
        4: [
            {w: "ROCKET", e: "üöÄ"}, {w: "DRAGON", e: "üêâ"}, {w: "MONKEY", e: "üêí"}, 
            {w: "PLANET", e: "ü™ê"}, {w: "WIZARD", e: "üßô‚Äç‚ôÇÔ∏è"}, {w: "ROBOT", e: "ü§ñ"}
        ]
    };

    // Audio Synthesizer
    const AudioContext = window.AudioContext || window.webkitAudioContext;
    let audioCtx;

    function initAudio() {
        if (!audioCtx) audioCtx = new AudioContext();
        if (audioCtx.state === 'suspended') audioCtx.resume();
    }

    function playSound(type) {
        if (!audioCtx) return;
        const osc = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        osc.connect(gainNode);
        gainNode.connect(audioCtx.destination);

        if (type === 'magic') {
            osc.type = 'sine';
            osc.frequency.setValueAtTime(400, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(1200, audioCtx.currentTime + 0.3);
            gainNode.gain.setValueAtTime(0.2, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.3);
            osc.start();
            osc.stop(audioCtx.currentTime + 0.3);
        } else if (type === 'fizzle') {
            osc.type = 'sawtooth';
            osc.frequency.setValueAtTime(200, audioCtx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(50, audioCtx.currentTime + 0.8);
            gainNode.gain.setValueAtTime(0.2, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.8);
            osc.start();
            osc.stop(audioCtx.currentTime + 0.8);
        }
    }

    function showStartScreen() {
        document.getElementById('start-screen').className = '';
        document.getElementById('end-screen').className = 'hidden';
        document.getElementById('play-screen').className = 'hidden';
    }

    function startGame() {
        initAudio();
        score = 0; level = 1; timeRemaining = 100;
        document.getElementById('start-screen').className = 'hidden';
        document.getElementById('end-screen').className = 'hidden';
        document.getElementById('play-screen').className = '';
        updateStats();
        nextWord();
        startTimer();
        ansInp.focus();
    }

    function shuffle(string) {
        let arr = string.split('');
        for (let i = arr.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [arr[i], arr[j]] = [arr[j], arr[i]];
        }
        return arr.join(' ');
    }

    function nextWord() {
        let dictLevel = Math.min(level, 4);
        let wordList = dictionary[dictLevel];
        
        let randomItem = wordList[Math.floor(Math.random() * wordList.length)];
        currentWord = randomItem.w;
        
        emojiEl.innerText = randomItem.e;
        
        let scrambled = shuffle(currentWord);
        while(scrambled.replace(/ /g, '') === currentWord && currentWord.length > 1) {
            scrambled = shuffle(currentWord);
        }
        
        scrambledEl.innerText = scrambled;
        ansInp.value = '';
    }

    ansInp.addEventListener('input', () => {
        let typed = ansInp.value.toUpperCase().trim();
        
        if (typed === currentWord) {
            playSound('magic');
            createSparkles();
            score++;
            timeRemaining = Math.min(100, timeRemaining + 25); 
            
            if (score % 3 === 0) level++; 
            
            flash('flash-magic');
            updateStats();
            nextWord();
        }
    });

    function startTimer() {
        clearInterval(timer);
        timer = setInterval(() => {
            let speed = 0.5 + (level * 0.1); 
            timeRemaining -= speed; 
            
            document.getElementById('mana-bar').style.width = Math.max(0, timeRemaining) + '%';
            
            if(timeRemaining < 25) {
                document.getElementById('mana-bar').style.background = '#ff0000';
            } else {
                document.getElementById('mana-bar').style.background = 'linear-gradient(90deg, #00d2ff, #b100ff, #ff007f)';
            }

            if (timeRemaining <= 0) gameOver();
        }, 100);
    }

    function gameOver() {
        clearInterval(timer);
        playSound('fizzle');
        document.getElementById('play-screen').className = 'hidden';
        document.getElementById('end-screen').className = '';
        document.getElementById('final-score').innerText = score;
    }

    function updateStats() {
        document.getElementById('score').innerText = score;
        document.getElementById('level').innerText = level;
    }

    function flash(cls) {
        document.body.classList.add(cls);
        setTimeout(() => document.body.classList.remove(cls), 150);
    }

    function createSparkles() {
        const box = document.getElementById('game-box');
        for(let i = 0; i < 5; i++) {
            let sparkle = document.createElement('div');
            sparkle.innerText = '‚ú®';
            sparkle.className = 'magic-sparkle';
            sparkle.style.left = (Math.random() * 80 + 10) + '%';
            sparkle.style.top = (Math.random() * 80 + 10) + '%';
            box.appendChild(sparkle);
            setTimeout(() => sparkle.remove(), 1000);
        }
    }

    document.addEventListener('click', () => {
        if(!document.getElementById('play-screen').classList.contains('hidden')) {
            ansInp.focus();
        }
    });
</script>
</body>
</html>
